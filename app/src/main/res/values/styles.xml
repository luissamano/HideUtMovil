<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/holo_blue_dark</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_light</item>
        <item name="colorAccent">@android:color/holo_red_light</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:navigationBarColor">@color/switch_thumb_disabled_material_dark</item>
        <item name="android:statusBarColor">@android:color/holo_blue_light</item>
        <item name="android:textColorPrimaryInverse">@color/abc_btn_colored_borderless_text_material</item>
        <item name="android:textColorSecondary">@color/holo_blue_dark</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/holo_red_dark</item>
        <item name="android:textColorPrimary">@android:color/widget_edittext_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme_Dialog_Translucent" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@android:color/holo_blue_dark</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
